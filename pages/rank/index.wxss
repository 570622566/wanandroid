.rank-item {
    display: flex;
    flex-direction: row;
    position: relative;
    height: 120rpx;
    border-bottom: 1rpx solid #fcfcfc;
    font-size: 28rpx;
    color: #333333;
    justify-content: space-between;
    align-items: center;
}

.rank-bg {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    height: 100%;
    background-color: rgba(84, 175, 234,0.1);
    z-index: -1;
}
.rank-left {
    margin-left: 24rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: space-evenly;

}

