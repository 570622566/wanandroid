.tixi-container {
    width: 100vw;
    display: flex;
    position: fixed;
}

.left-menu {
    width: 260rpx;
    height: 100vh;
    background-color: #f8f8f8;
}

.left-item {
    text-align: center;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
}

.activity-item {
    font-size: 26rpx;
    left: 0rpx;
    background-color: #FFF;
    border-left: 6rpx solid #FF4500;
    color: #333;
}

.right-container {
    width: 100%;
    height: 100vh;
}

.category-container {
    display: flex;
    flex-direction: column;
}

.menu-title {
    width: 100%;
    color: #333;
    font-size: 28rpx;
    text-align: center;
    margin-top: 24rpx;
}

.item-container {
    display: flex;
    flex-wrap: wrap;
    padding-right: 24rpx;
}

.tixi-item {
    padding: 8rpx 28rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
    background-color: #efefef;
    margin-left: 24rpx;
    margin-top: 24rpx;
    color: #666;

}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
   }
